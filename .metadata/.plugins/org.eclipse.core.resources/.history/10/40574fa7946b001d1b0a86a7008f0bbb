public class example18_06_05
{
    public static void main(String[] args) 
    {    
    System.out.print("Расчет без рекурсии для числа 6: ");
    square.doit(5);
    squareReqursion.Counting(6);
    squareReqursion.Output();
    squareReqursion.Null();
    }


    static class square 
    {
        static void doit(int num) 
        {
            int count = 0;
            while (num > 0) 
            {
                count += num * num;
                num--;
            }
            System.out.println(count);
        }
    }


    static class squareReqursion 
    {
        static int count = 0;
        static void Counting (int num) 
        {
            if (num > 0) 
            {
                count += num * num;
                Counting(num - 1);
            }
        }
        static void Output() 
        {
            System.out.println("Решение с рекурсией для числа 6: " + count);
        }

        static void Null() 
        {
            count = 0;
        }
    }
}