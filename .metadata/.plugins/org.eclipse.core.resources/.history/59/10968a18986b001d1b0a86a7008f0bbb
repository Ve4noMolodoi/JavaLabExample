public class example18_06_07 
{
    public static void main(String[] args) 
    {
        char[] arr = new char[]{'A','-','+'};

        for (int a=0; a < arr.length; a++)
        {
            System.out.println(arr[a]+ ": " + Program.code(arr)[a]);
        }
    }

    static class Program
    {
        static int[] code(char[] sArr)
        {
            int[] arg = new int[sArr.length];
            for (int a=0;a<arg.length;a++)
            {
                arg[a]=sArr[a];
            }
            return arg;
        }
    }
}