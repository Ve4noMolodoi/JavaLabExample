
public class example18_06_03 
{
    public static void main(String[] args) 
    {
        System.out.println("Calculating data from the missive: ");
        int[] arr = new int[]{4,654,1,21,32,324,2,22,20,15};
        System.out.print("Maximum: ");
        program.MethodMax(arr);
        System.out.print("Minimum: ");
        program.MethodMin(arr);
        System.out.print("Average: ");
        program.MethodMed(arr);
    }

    static class program
    {
        static void MethodMax(int... nums)
        {
            int[] nums = nums;
            int b = 0;

            for ( int a = 0; a < nums.length; a++)
            {
                if (b < nums[a])
                {
                    b = nums[a];
                }
            }
            System.out.println(b);
        }

        static void MethodMin(int... nums)
        {
            int[] nums = nums;
            double b = 3000;

            for (int a = 0; a < nums.length; a++)
            {
                if (b > nums[a])
                {
                    b = nums[a];
                }
            }
            System.out.println(b);
        }

        static void MethodMed(int... nums)
        {
            int[] nums = nums;
            double b = 0;
            for (int a = 0; a < nums.length; a++)
            {
                b += nums[a];
            }

            b = b/nums.length;
            System.out.println(b);
        }
    }
}