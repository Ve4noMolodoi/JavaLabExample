public class example18_06_09
{
    public static void main(String[] args) 
    {
        int[] arr = new int[]{4,654,1,21,32,324,2,1,20,15};

        int[] res = new int[2];
        res = Lupa.go(arr);
        System.out.print("min:"+res[0]+"\nmax:"+res[1]);

    }

    static class Lupa
    {
        static int[] go(int ... nums)
        {
            int max = 0, min = 3;
            int[] mm = new int[2];
            
            for (int b=0;b<nums.length;b++)
            {
                if (max<nums[b])
                {
                    max=nums[b];
                }else if (min>nums[b])
                {
                    min=nums[b];
                }
            }
            mm[0] = min;
            mm[1] = max;
            
            return mm;
        }
    }
}
